<h1>My Blog</h1>

<% @blog_posts.each do |blog_post|%>
  <% if blog_post.draft? %>
    <div class= "bg-gray-300 text-white p-4 rounded hover:bg-gray-400">Draft Mode</div>
  <% elsif blog_post.scheduled? %>
    <div class= "bg-blue-300 text-white p-4 rounded hover:bg-blue-400">Scheduled</div>
  <% end %>
  <h2 class="mt-0"><%= link_to blog_post.title, blog_post_path(blog_post.id) %></h2>
  <p><%= blog_post.body %></p>
<% end %>
